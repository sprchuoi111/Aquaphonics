<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ActuatorFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            >
    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/navi_menu_actuator"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:backgroundColor="@color/white"
        app:iconSize="30dp"
        app:iconTint="@color/black"
        app:iconTintActive="#1640D6"
        app:menu="@menu/menu_actuator"
        app:textColor="#1640D6"
        app:indicatorColor="#EEF5FF"/>
        </androidx.cardview.widget.CardView>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_pager_actuator"
        />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="HardcodedText">
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/add_actuator"
            app:icon="@drawable/menu_add"
            android:text="Menu Actuator"

            android:layout_margin="20dp"
            android:backgroundTint="#B4BDFF"
            android:id="@+id/btn_menu_actuator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/add_actuator"
            android:src="@drawable/edit"

            android:layout_marginBottom="10dp"
            android:backgroundTint="#B4BDFF"
            android:id="@+id/btn_edit_actuator"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@+id/btn_menu_actuator"
            app:layout_constraintEnd_toEndOf="@+id/btn_menu_actuator"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/add_actuator"
            android:src="@drawable/add"
            android:layout_marginEnd="8dp"
            android:layout_margin="10dp"
            android:backgroundTint="#B4BDFF"
            android:id="@+id/btn_add_actuator"

            app:layout_constraintBottom_toTopOf="@+id/btn_edit_actuator"
            app:layout_constraintEnd_toEndOf="@+id/btn_edit_actuator"
            app:layout_constraintStart_toStartOf="@+id/btn_edit_actuator"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>